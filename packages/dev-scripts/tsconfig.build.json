{
	"compilerOptions": {
		"target": "ESNext",
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"module": "CommonJS",
		"declaration": true,
		"outDir": "./dist"
		
	},
	"include": ["bin/*", "scripts/*", "lib/*", "build.ts"]
}
